{% extends "RoommateBundle::_base.html.twig" %}

{% block pageTitle %}Dashboard - {% endblock %}

{% block content %}

    <a href="{{ path('dashboard_add') }}" class="btn btn-primary header-btn pull-right">
        <i class="fa fa-plus"></i>
        Add Item
    </a>

    <h3><i class="fa fa-angle-right"></i> Dashboard</h3>

    <div class="row mt">
        {% for item in items %}
            <div class="col-xl-3 col-md-4 col-sm-6 mb">
                <div class="showback">
                    <div class="row">
                        <div class="col-sm-12">
                            {% if app.user.roommateId == item.owner_id %}
                                <a href="{{ path('dashboard_delete', {'item': item.id}) }}" class="close">x</a>
                            {% endif %}
                            <h4>{{ item.title }}</h4>

                            {% if item.description %}
                                <p>{{ item.description }}</p>
                            {% endif %}

                            <div class="row">
                                <div class="col-sm-6">
                                    <h5>{{ item.date_added|ago }}</h5>
                                </div>
                                <div class="col-sm-6">
                                    <h5 class="pull-right">By {{ item.owner_name }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
