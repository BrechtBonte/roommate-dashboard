<!-- **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        *********************************************************************************************************************************************************** -->
<!--sidebar start-->
{% set currentRoute = app.request.attributes.get('_route') %}
<aside>
    <div id="sidebar"  class="nav-collapse ">
        <!-- sidebar menu start-->
        <ul class="sidebar-menu" id="nav-accordion">

            <p class="centered"><a href="{{ path('profile_edit') }}"><img src="/assets/img/ui-sam.jpg" class="img-circle" width="60"></a></p>
            <h5 class="centered">{{ app.user.displayName }}</h5>

            <li class="mt">
                <a href="{{ path('dashboard') }}"{% if currentRoute starts with 'dashboard' %} class="active"{% endif %}>
                    <i class="fa fa-clipboard"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <li>
                <a href="{{ path('contacts_browse') }}"{% if currentRoute starts with 'contacts' %} class="active"{% endif %}>
                    <i class="fa fa-users"></i>
                    <span>Contacts</span>
                </a>
            </li>

            <li>
                <a href="{{ path('cleaning_jobs') }}"{% if currentRoute starts with 'cleaning' %} class="active"{% endif %}>
                    <i class="fa fa-magic"></i>
                    <span>Cleaning</span>
                </a>
            </li>

            <li>
                <a href="{{ path('events_browse') }}"{% if currentRoute starts with 'event' %} class="active"{% endif %}>
                    <i class="fa fa-calendar"></i>
                    <span>Events</span>
                </a>
            </li>
            <li>
                <a href="{{ path('groceries_view') }}"{% if currentRoute starts with 'groceries' %} class="active"{% endif %}>
                    <i class="fa fa-shopping-cart"></i>
                    <span>Shopping list</span>
                </a>
            </li>
            <li>
                <a href="{{ path('debt_overview') }}"{% if currentRoute starts with 'debt' %} class="active"{% endif %}>
                    <i class="fa fa-credit-card"></i>
                    <span>Debt</span>
                </a>
            </li>

        </ul>
        <!-- sidebar menu end-->
    </div>
</aside>
<!--sidebar end-->
